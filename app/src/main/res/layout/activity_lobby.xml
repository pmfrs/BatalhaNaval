<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context="pt.iscte.batalhanaval.Lobby">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:dividerPadding="8dp"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/LogOutTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Logout"
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_dark" />


        <TextView
            android:id="@+id/welcomeTxt"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Welcome"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="@string/LobbyTxt"
            android:textAlignment="center"
            android:textSize="28sp" />
        <Button
            android:id="@+id/play_pc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SINGLEPLAYER"
            android:textAlignment="center" />

        <Button
            android:id="@+id/play_multiplayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="MULTIPLAYER"
            android:textAlignment="center" />

        <Button
            android:id="@+id/instBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="INSTRUÇÕES"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/play_multiplayer" />




        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stats"
            android:text="Ganhaste: 0 jogos\n Perdeste: 0 jogos"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:gravity="center"/>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
