<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.iscte.batalhanaval.RegisterActivity">

    <EditText
        android:id="@+id/rgUsernameTxt"
        android:layout_width="363dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_editor_absoluteX="8dp" />

    <EditText
        android:id="@+id/rgDataNascTxt"
        android:layout_width="363dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="Data de nascimento"
        android:inputType="date"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/rgUsernameTxt"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.222"
        tools:layout_editor_absoluteY="51dp" />

    <EditText
        android:id="@+id/rgEmailTxt"
        android:layout_width="363dp"
        android:layout_height="41dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgDataNascTxt" />

    <EditText
        android:id="@+id/rgPassTxt"
        android:layout_width="356dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/rgEmailTxt"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/rgCancelarBtn"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Cancelar"
        app:layout_constraintTop_toBottomOf="@+id/rgRegistarBtn"
        tools:layout_editor_absoluteX="-21dp" />

    <Button
        android:id="@+id/rgRegistarBtn"
        android:layout_width="362dp"
        android:layout_height="45dp"
        android:text="Registar"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/rgPassTxt"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="246dp"
        tools:layout_editor_absoluteX="35dp" />

</android.support.constraint.ConstraintLayout>
